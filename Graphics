#include<SDL.h>
#include<iostream>
using namespace std;
int main(int argc, char*argv[])
{
	SDL_Window* window = NULL;
	SDL_Surface* windowSurface = NULL;
	SDL_Surface* imageSurface = NULL;
	bool isRunning = true;
	SDL_Event ev;

	if (SDL_Init(SDL_INIT_VIDEO) < 0)
		cout << "Video init error: " << SDL_GetError() << endl;
	else
	{
		window = SDL_CreateWindow("Quoridor", SDL_WINDOWPOS_CENTERED, SDL_WINDOWPOS_CENTERED, 620, 538, SDL_WINDOW_SHOWN);
		if (window == NULL)
			cout << "Error" << SDL_GetError() << endl;
		else
		{// window created
			windowSurface = SDL_GetWindowSurface(window);
			imageSurface = SDL_LoadBMP("final.bmp");

			if (imageSurface == NULL)
				cout << "Image loading error: " << SDL_GetError() << endl;
			else
			{
				SDL_BlitSurface(imageSurface, NULL, windowSurface, NULL);
			while(isRunning)
			{
				while (SDL_PollEvent(&ev))
				{
					if (ev.type == SDL_QUIT)
						isRunning = false;

				}
				SDL_UpdateWindowSurface(window);
		

			}

			}
		}

		SDL_FreeSurface(imageSurface);
		imageSurface = NULL;

		SDL_DestroyWindow(window);
		window = NULL;
		windowSurface = NULL;
		SDL_Quit();

		return 0;

	}
}
