#include<conio.h>
bool gameOver;
const int width = 19 ;
const int height = 19 ;
enum eDirection { STOP =0, LEFT, RIGHT,UP,DOWN };
int x,y;
eDirection dir;
void draw()
{

}
void Input()
{
    if(_kbhit())
    {
        switch(_getch())
        {
        case 'a':
            dir= LEFT;
            break;
        case 'd':
            dir =RIGHT;
            break;
        case 'w':
            dir= UP;
            break;
        case 's':
            dir= DOWN;
            break;
            default: gameOver=true;
        }
    }
}
void Logic()
{
    switch(dir)
    {
    case LEFT:
       x--; break;
    case RIGHT:
        x++;break;
    case UP:
        y--;
        break;
    case DOWN:
        y++;break;
        default : break;
    }
}
